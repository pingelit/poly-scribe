[build-system]
requires = ["setuptools"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ package }}"
version = "0.1.0"
description = "Code generated by poly-scribe-code-gen"
{% if author_name %}
authors = [
    { name = "{{ author_name }}"{% if author_email %}, email = "{{ author_email }}"{% endif %} }
]
{% endif +%}
{% if licence %}
license = "{{ licence }}"
{% endif %}
dependencies = [
    "pydantic",
    "jsonschema",
    "strenum",
    "pydantic-yaml",
    "cbor2",
]